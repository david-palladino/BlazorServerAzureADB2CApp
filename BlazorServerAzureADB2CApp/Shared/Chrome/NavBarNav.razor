@inject NavigationManager _navigation

<ul class="navbar-nav navbar-nav-right">
    <li class="nav-item nav-profile dropdown">
        <a class="nav-link dropdown-toggle" id="profileDropdown" href="javascript: void(0)" data-toggle="dropdown" aria-expanded="false" aria-label="Profile dropdown toggle.">
            <div class="nav-profile-img">
                <img src="../../images/avatar.png" alt="">
            </div>
            <div class="nav-profile-text">
                <p class="mb-1 text-black" tabindex="0">@UserClaims.EmailAddress</p>
            </div>
        </a>
        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
            <div class="dropdown-divider"></div>
            <a id="signOutDropdownItem" class="dropdown-item" href="#" @onclick="Logout">
                <i class="mdi mdi-logout mr-2 text-primary"></i> Sign out
            </a>
        </div>
    </li>
    <li class="nav-item d-none d-lg-block" title="Sign out">
        <a class="nav-link" href="@Url.Site.Account.SignOut" aria-label="Sign out.">
            <i class="mdi mdi-logout"></i>
        </a>
    </li>
</ul>

@code {
    [Parameter]
    public UserClaims UserClaims { get; set; }

    void Logout()
    {
        try
        {
            _navigation.NavigateTo(Url.Site.Account.SignOut);
        }
        catch
        {
            _navigation.NavigateTo(Url.Site.Error, true);
        }
    }
}
